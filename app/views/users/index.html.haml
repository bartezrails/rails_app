.col-md-8
  %table{:class => 'table'}
    -@users.each do |user|
      %tr
        %td 
          =fa_icon "user"
          =user.name
        %td
          =fa_icon "envelope-o"
          =user.email
        %td 
          =link_to 'Show', user
        %td 
          =link_to 'Edit', edit_user_path(user)
        %td 
          =link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
        %br
        
  =link_to 'New User', new_user_path